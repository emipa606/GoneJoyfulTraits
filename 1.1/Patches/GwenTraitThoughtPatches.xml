<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThoughtDef[defName="SoakingWet"]/nullifyingTraits</xpath>
    <success>Always</success>
    <match Class="PatchOperationAdd">
      <xpath>Defs/ThoughtDef[defName="SoakingWet"]/nullifyingTraits</xpath>
      <value>
        <li>GBKT_Aquaphile</li>
      </value>
    </match>
